		<meta http-equiv="content-language" content="pt-br" />
		<meta name="author" content="Luiz Costa">
		<meta name="keywords" content="Concorra Prêmios Grátis Pesquisa Mercado Elifex Web Marketing Marca Propaganda" />
		<%= csrf_meta_tags %>
		<%= favicon_link_tag%>
		
